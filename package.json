{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/eddb",
    "version": "2.0.0",
    "description": "Typescript types and utility functions for the Elite Dangerous Database (EDDB) API",
    "keywords": [
        "elite dangerous",
        "eddb",
        "frontier"
    ],
    "license": "SEE LICENSE IN LICENSE.md",
    "repository": "github:kayahr/eddb",
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "Klaus Reimer",
        "email": "k@ailis.de"
    },
    "scripts": {
        "clean": "rimraf lib coverage doc/api",
        "compile": "tsc",
        "watch": "tsc -w",
        "check": "jest",
        "coverage": "jest --coverage",
        "doc": "typedoc --excludeNotExported --excludePrivate --mode file --includes doc --out doc/api src/main ../../node_modules/**/*.d.ts",
        "lint": "eslint --max-warnings 0 --ext .ts src",
        "cspell": "cspell '**/*'",
        "prepare": "npm run -s clean && npm run -s compile",
        "test": "npm run -s cspell && npm run -s lint && npm run -s check"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "main": "lib/main/index",
    "funding": {
        "url": "https://github.com/kayahr/eddb?sponsor=1"
    },
    "jest": {
        "projects": [
            {
                "displayName": "node",
                "testEnvironment": "jest-environment-node-single-context",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            },
            {
                "displayName": "electron",
                "runner": "@jest-runner/electron",
                "testEnvironment": "@jest-runner/electron/environment",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            }
        ],
        "collectCoverageFrom": [
            "<rootDir>/lib/main/**/*.js"
        ]
    },
    "devDependencies": {
        "@jest-runner/electron": "3.0.0",
        "@kayahr/eslint-config": "1.3.0",
        "@types/jest": "26.0.15",
        "@types/node": "14.14.10",
        "@typescript-eslint/eslint-plugin": "4.8.2",
        "@typescript-eslint/parser": "4.8.2",
        "ajv": "6.12.6",
        "cspell": "4.2.2",
        "electron": "11.0.3",
        "eslint": "7.14.0",
        "eslint-plugin-deprecation": "1.1.0",
        "eslint-plugin-simple-import-sort": "6.0.1",
        "jest": "26.6.3",
        "jest-environment-node-single-context": "26.2.0",
        "jest-extended": "0.11.5",
        "rimraf": "3.0.2",
        "source-map-support": "0.5.19",
        "ts-json-schema-generator": "0.79.0",
        "typedoc": "0.19.2",
        "typescript": "4.1.2"
    },
    "dependencies": {
        "tslib": "^2.0.2"
    }
}
